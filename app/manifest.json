{
  "name": "Riddit",
  "version": "1.4",
  "description": "Hide posts and block subs on Reddit.com",
  "manifest_version": 2,
  "permissions": ["tabs"],

  "content_scripts": [
    {
      "matches": ["https://www.reddit.com/*"],
      "js": ["jquery-1.10.2.min.js", "riddit.js"],
      "css": ["riddit.css"]
    }
  ],
  
  "browser_action": {
    "default_title": "Riddit",
    "default_icon": "icon.png"
  }
}